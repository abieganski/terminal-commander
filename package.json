{
  "name": "terminal-commands-extension",
  "displayName": "Terminal Commands",
  "description": "A VS Code extension with GUI buttons to run commands in the terminal",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "*"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminal-commands.showPanel",
        "title": "Show Terminal Commands Panel",
        "category": "Terminal Commands"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminal-commands-container",
          "title": "Terminal Commands",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "terminal-commands-container": [
        {
          "id": "terminal-commands-view",
          "name": "Commands",
          "when": "true",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "terminal-commands.showPanel",
          "when": "view == terminal-commands-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
